{
  "manifest_version": 3,
  "name": "readless - smart summarization",
  "version": "1.0",
  "description": "summarize selected text using 4o-mini",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
